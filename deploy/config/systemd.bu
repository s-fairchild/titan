                                -v=k3s-applb-data:/var/lib/rancher/k3s \
                                -v=k3s-applb-rancher:/etc/rancher \
                                -v=/var/usrlocal/etc/k3s/config/k3s-applb.yaml:/etc/rancher/k3s/config.yaml:z,ro \
                                --shm-size=5g \
                                --privileged \
                                --userns=host \
                                --secret=k3s-token,type=env,target=K3S_TOKEN \
                                docker.io/rancher/k3s:v1.30.4-k3s1 \
                                agent

        ExecStop=/usr/bin/podman stop \
                                --ignore -t 10 \
                                --cidfile=%t/%n.ctr-id
        ExecStopPost=/usr/bin/podman rm \
                                    -f \
                                    --ignore -t 10 \
                                    --cidfile=%t/%n.ctr-id
        Type=notify
        NotifyAccess=all

        [Install]
        WantedBy=default.target
    # TODO convert this to systemd quadlet file
    # TODO setup podman healthcheck
    # TODO impose storage limits on this container
    # TODO script podman secret creation for registry-docker-user and registry-docker-pass
    # TODO redirect all requests to docker.io to this container registry via coredns
    - name: container-registry.service
      enabled: true
      contents: |
        [Unit]
        Description=Podman container-registry.service
        Documentation=man:podman-generate-systemd(1)
        Wants=network-online.target
        After=network-online.target
        RequiresMountsFor=%t/containers

        [Service]
        Environment=PODMAN_SYSTEMD_UNIT=%n
        Restart=on-failure
        TimeoutStopSec=70
        ExecStart=/usr/bin/podman run \
                                --cidfile=%t/%n.ctr-id \
                                --cgroups=no-conmon \
                                --rm \
                                --sdnotify=conmon \
                                --replace \
                                -d \
                                --name=registry \
                                --annotation=app=registry \
                                -v=registry:/var/lib/registry \
                                -v=/var/usrlocal/etc/registry/registry.yaml:/etc/distribution/config.yml:Z,ro
                                -p 5000:5000 \
                                --network=node:ip=10.98.0.252 \
                                --pull=missing \
                                --secret=registry-auth,type=mount,target=/etc/registry \
                                --secret=registry-docker-user,type=env,target=REGISTRY_PROXY_USERNAME \
                                --secret=registry-docker-pass,type=env,target=REGISTRY_PROXY_PASSWORD \
                                --dns-search=expresso.lan \
                                --tz=UTC \
                                docker.io/registry:2.8.3
        ExecStop=/usr/bin/podman stop \
                                --ignore -t 10 \
                                --cidfile=%t/%n.ctr-id
        ExecStopPost=/usr/bin/podman rm \
                                    -f \
                                    --ignore -t 10 \
                                    --cidfile=%t/%n.ctr-id
        Type=notify
        NotifyAccess=all

        [Install]
        WantedBy=default.target
    # TODO setup podman containers using systemd drop-in files
    - name: init-podman-networks.service
      enabled: true
      contents: |
        [Unit]
        Description=Create podman networks needed for k3s
        ConditionFirstBoot=true
        Wants=first-boot-complete.target
        Wants=network-online.target
        After=network-online.target
        ConditionPathExists=!/var/usrlocal/lib/%N.stamp

        [Service]
        Type=oneshot
        RemainAfterExit=yes
        ExecStart=/var/usrlocal/bin/init_podman_networks.sh %N

        [Install]
        WantedBy=multi-user.target
    - name: var-local-lib-k3s-agent-appdata.mount
      enabled: true
      contents: |
        [Unit]
        Description=Mount appdata btrfs volume
        After=dev-md126.device
        BindsTo=dev-md126.device

        [Mount]
        TimeoutSec=10min
        # /dev/md/appdata
        What=/dev/md126
        Type=btrfs
        Options=compress=zstd:1

        [Install]
        RequiredBy=local-fs.target
    - name: var-local-lib-k3s-agent-cctv.mount
      enabled: true
      contents: |
        [Unit]
        Description=Mount cctv btrfs volume
        After=dev-md127.device
        BindsTo=dev-md127.device

        [Mount]
        TimeoutSec=10min
        # /dev/md/cctv
        What=/dev/md127
        Type=btrfs
        Options=compress=zstd:1

        [Install]
        RequiredBy=local-fs.target
