[Unit]
Description=Podman k3s-rick-agent-0.service for %I
Wants=network-online.target
After=network-online.target
RequiresMountsFor=%t/containers
After=k3s-server-0.service

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n-%i
Restart=always
RestartSec=30
TimeoutStartSec=600
TimeoutStopSec=70
ExecStart=/usr/bin/podman run \
	--name=k3s-rick-agent-0 \
	-h=k3s-rick-agent-0 \
	--network=nodes:ip=10.98.0.100 \
	--network=services \
	--dns-search=expresso.lan \
	--dns=10.50.0.1 \
	--systemd=always \
	--tz=UTC \
	--cidfile=%t/%n.ctr-id \
	--cgroups=no-conmon \
	--rm \
	--sdnotify=conmon \
	-d \
	--replace \
	--pull=missing \
	--device=/dev/v4l/by-id/usb-HD_Camera_Manufacturer_HD_USB_Camera_2020101401-video-index0:/dev/video0 \
	--device=/dev/v4l/by-id/usb-HD_Camera_Manufacturer_HD_USB_Camera_2020101401-video-index1:/dev/video1 \
	--device=/dev/snd:/dev/snd \
	--device=/dev/dri:/dev/dri \
	-v=/var/local/lib/agent/datastore:/volumes:Z \
	-v=/etc/machine-id:/etc/machine-id:ro \
	-v=k3s-agent-0-kubelet:/var/lib/kubelet \
	-v=k3s-agent-0-pod-logs:/var/log/pods \
	-v=k3s-agent-0-data:/var/lib/rancher/k3s \
	-v=k3s-agent-0-etc-rancher:/etc/rancher \
	-v=/usr/local/etc/k3s/k3s-agent-0.yaml:/etc/rancher/k3s/config.yaml \
  	-v=/var/local/var/k3s/persistentVolumes/:/pvs:z \
	--shm-size=5g \
	--privileged \
	--group-add=keep-groups \
	--userns=host \
	--secret=k3s-token,type=env,target=K3S_TOKEN \
	--annotation=app=k3s \
	docker.io/rancher/k3s:v1.28.1-k3s1 \
	agent
	
ExecStop=/usr/bin/podman stop \
	--ignore -t 10 \
	--cidfile=%t/%n.ctr-id
ExecStopPost=/usr/bin/podman rm \
	-f \
	--ignore -t 10 \
	--cidfile=%t/%n.ctr-id
Type=notify
NotifyAccess=all

[Install]
WantedBy=default.target
