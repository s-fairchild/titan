[Unit]
Description=Podman container-k3d-rick-agent-3.service for %I
Documentation=man:podman-generate-systemd(1)
Wants=network-online.target
After=network-online.target
RequiresMountsFor=%t/containers

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n-%i
Restart=always
RestartSec=30
TimeoutStartSec=600
TimeoutStopSec=70
ExecStart=/usr/bin/podman run \
	--network=agent:ip=10.99.0.11 \
	--tz=UTC \
	--add-host rick.expresso.lan:10.50.0.2 \
	--add-host k3d-rick-server-0:10.50.0.2 \
	--add-host k3d-registry:10.50.0.2 \
	--cidfile=%t/%n.ctr-id \
	--cgroups=no-conmon \
	--rm \
	--sdnotify=conmon \
	-d \
	--replace \
	--name k3s-rick-agent-1 \
	--device /dev/v4l/by-id/usb-HD_USB_Camera_HD_USB_Camera_2020040501-video-index0:/dev/video0 \
	-h k3s-rick-agent-1 \
	-v /etc/machine-id:/etc/machine-id:ro \
	-v k3s-agent-1-var-rancher:/var/lib/rancher/k3s \
	-v k3s-agent-1-etc-rancher:/etc/rancher \
	-v k3s-agent-1-kubelet:/var/lib/kubelet \
	-v k3s-agent-1-pod_logs:/var/log/pods \
	-v compute:/pvs \
	-v /usr/local/etc/k3s-agent-1.yaml:/etc/rancher/k3s/config.yaml \
	-v /usr/local/etc/k3s/rancher/registries.yaml:/etc/rancher/k3s/registries.yaml:ro \
	--shm-size 200m \
	--privileged \
	--secret agent-token,type=env,target=K3S_TOKEN \
	--annotation app=k3s \
	docker.io/rancher/k3s:v1.28.1-k3s1 \
	agent
	
ExecStop=/usr/bin/podman stop \
	--ignore -t 10 \
	--cidfile=%t/%n.ctr-id
ExecStopPost=/usr/bin/podman rm \
	-f \
	--ignore -t 10 \
	--cidfile=%t/%n.ctr-id
Type=notify
NotifyAccess=all

[Install]
WantedBy=default.target
