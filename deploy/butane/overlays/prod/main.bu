variant: fcos
version: 1.5.0
ignition:
  config:
    merge:
      - local: butane/base/coreos/services.bu
      - local: butane/base/coreos/users.bu
      - local: butane/base/coreos/storage/disk.bu
      - local: butane/base/coreos/storage/raid.bu
      - local: butane/base/coreos/storage/filesystem/filesystem.bu
      - local: butane/base/coreos/storage/filesystem/mounts.bu
storage:
  files:
    - path: /etc/hostname
      mode: 0644
      contents:
        # TODO populate this with environment variable
        inline: |
          rick.expresso.lan
      overwrite: true
    - path: /etc/NetworkManager/system-connections/enp1s0.nmconnection
      mode: 0600
      contents:
        # TODO convert this to inline
        local: config/coreos-files/static-ip.nmconnection
      overwrite: true
    - path: /var/usrlocal/etc/sysconfig/k3s-loadbalancer
      mode: 0640
      contents:
        # TODO HOST_IP value with a local environment variable
        inline: |
          HOST_IP="10.50.0.2"
      overwrite: true
    # Needed for the large amount of files kubernetes workloads tend to open
    # Reference: https://discussion.fedoraproject.org/t/setting-ulimit/83508/9
    - path: /etc/security/limits.conf
      mode: 0644
      append:
        - inline: |
            * soft nofile 6144
            * hard nofile 8192
            root soft nofile 6144
            root hard nofile 8192
